# ARG_OPTIONAL_BOOLEAN([search_hidden],[s],[search hidden folders])
# ARG_POSITIONAL_SINGLE([file_pattern],[file pattern to find],[])
# ARG_POSITIONAL_SINGLE([path],[base directory to start search],[.])
# ARG_HELP([Search for file pattern in subdirs and print folder names that contain it in order])
# ARGBASH_GO()
